<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Products</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Brand</th>
        <th>Price</th>
        <th>In Stock</th>
        <th width="30%">Description</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.brand.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td align="left"><%= product.quantity %></td>
        <td><%= product.description.html_safe %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to fa_icon('eye'), product %></td>
        <td><%= link_to fa_icon('pencil-square-o'), edit_product_path(product) %></td>
        <td><%= link_to fa_icon('trash'), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="text-center"> 
    <%= link_to 'New Product', new_product_path, class: "btn btn-small btn-success" %>
  </div>
</div>