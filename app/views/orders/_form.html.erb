<%= simple_form_for(@order) do |f| %>
    <%= f.error_notification %> <!-- where to display any errors-->
     
    <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :pay_type, collection: Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
    </div>
    
    <div class="form-actions">
        <%= f.submit 'Place Order', class: 'btn btn-success btn-sm' %>
    </div>
<% end %>