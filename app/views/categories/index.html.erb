<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Categories</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to fa_icon('eye'), category %></td>
        <td><%= link_to fa_icon('pencil-square-o'), edit_category_path(category) %></td>
        <td><%= link_to fa_icon('trash'), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="text-center">
    <%= link_to 'New Category', new_category_path, class: "btn btn-small btn-success" %>
  </div>
</div>

