<p id="notice"><%= notice %></p>


<div class="container">
  <h1>Brands</h1>
  
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td><%= brand.name %></td>
          <td><%= link_to fa_icon('eye'), brand %></td>
          <td><%= link_to fa_icon('pencil-square-o'), edit_brand_path(brand) %></td>
          <td><%= link_to fa_icon('trash'), brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Brand', new_brand_path %>
</div>
